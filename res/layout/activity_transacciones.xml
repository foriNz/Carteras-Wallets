<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:orientation="vertical"
    tools:context=".Activities.Transaccion">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        style="@style/TEXT"
        android:id="@+id/tv_titulo_transaccion"

        android:text="@string/creacion_transaccion"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/ll_panel_transacciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_circuloCategoria"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:background="@drawable/outline_circle_24"
            android:backgroundTint="@color/black" />

        <EditText
            android:id="@+id/et_transaccion"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent"
            android:ems="15"
            android:hint="0"
            android:inputType="numberDecimal|numberSigned"
            android:textAlignment="viewEnd"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/sp_moneda"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:paddingRight="20dp"
            android:spinnerMode="dialog"
            android:text="â‚¬" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_billeteras_transaccion"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_billeteraIzq"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/outline_wallet_24"
            android:drawablePadding="5dp"
            android:gravity="center"

            android:paddingLeft="15dp"
            android:text="@string/tv_billeteraIZQ"
            android:textAlignment="viewStart"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_billeteraDer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textAlignment="viewEnd"

            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fechaIzq"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/outline_calendar_month_24"
            android:drawablePadding="5dp"

            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/hoy"
            android:textAlignment="viewStart"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_fechaDer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="@string/ayer"
            android:textAlignment="viewEnd"

            android:textSize="14sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/et_nota"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/outline_sticky_note_2_24"
        android:drawablePadding="5dp"

        android:hint="@string/et_nota"
        android:paddingLeft="15dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_agregarFoto"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableLeft="@drawable/outline_photo_camera_24"
            android:drawablePadding="5dp"

            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="@string/tv_agregarFoto"
            android:textAlignment="viewStart"


            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="192dp"
            android:maxHeight="108dp"
            android:paddingLeft="30dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_aceptar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="100dp"
        android:background="@color/purple_700"
        android:focusable="true"
        android:gravity="center"
        android:text="OK" />

    >
</LinearLayout>


